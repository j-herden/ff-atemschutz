<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
        <link rel="icon" href="{{ absolute_url( asset('img/favicon.svg') ) }}" type="image/svg+xml" >
        <title>{% block title %}Feuerwehren Bad Zwesten / Atemschutz{% endblock %}</title>
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
        <script src="https://kit.fontawesome.com/3d8281fe7f.js" crossorigin="anonymous"></script>
        <link rel="stylesheet" href="{{ absolute_url( asset('css/app.css') ) }}">
        {% block stylesheets %}

        {% endblock %}
    </head>
    <body>
    <div class="container" id="page">
        <div id="header" class="row text-center">
            <div class="col-sm-1">
                <a href="{{ path('dashboard') }}">
                    <img src="{{ absolute_url( asset('img/favicon.svg') ) }}" class="header" />
                </a>
            </div>
            <div class="col-sm-8">
                <h1>Feuerwehren Bad Zwesten</h1>
            </div>
            <div class="dropdown aktivUser col-sm-3">
                {% if app.user %}
                    <button class="btn btn-outline-secondary btn-sm dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        {{ app.user.name|e }}
                    </button>
                    <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                        <a class="dropdown-item" href="{{ path('profile') }}">Profil</a>
                        <a class="dropdown-item" href="{{ path('app_logout') }}">Logout</a>
                    </div>
                {% endif %}
            </div>
        </div>

        {{ include('flashMessages.html.twig') }}

        {% block body %}  {% endblock %}

        {% block footer %}
        <div class="footer row text-center">
            <div class="col-sm">
                <a href="{{ path('about_page') }}">Info</a>
            </div>
            <div class="col-sm">
                <a href="{{ path('impressum') }}">Impressum</a>
            </div>
            <div class="col-sm">
            {% if is_granted('ROLE_USER') %}
                <a href="{{ path('dashboard') }}">Dashboard</a>
            {% endif %}
            </div>
            <div class="col-sm">
            {% if is_granted('ROLE_USER') %}
                <a href="{{ path('lists') }}">Listenansicht</a>
            {% endif %}
            </div>
            <div class="col-sm">
            {% if is_granted('ROLE_ADMIN') %}
                <a href="{{ path('app_admin_dashboard_index') }}">Admin</a>
            {% endif %}
            </div>
        </div>
        {% endblock %}
    </div>

{% block javascripts %}
<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>

<script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>

<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js" integrity="sha384-OgVRvuATP1z7JjHLkuOU7Xw704+h835Lr+6QL9UvYjZE3Ipu6Tp75j7Bh/kR0JKI" crossorigin="anonymous"></script>

<script src="https://cdn.jsdelivr.net/npm/js-cookie@rc/dist/js.cookie.min.js"></script>
{% endblock %}
    </body>
</html>
